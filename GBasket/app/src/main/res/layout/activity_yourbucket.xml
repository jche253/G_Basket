<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/aaaaa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Basket"
        android:id="@+id/NameID"
        android:textSize="40dp"
        android:textColor="#e12f53"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <ListView
        android:layout_width="335dp"
        android:layout_height="320dp"
        android:id="@+id/ToBuyList"

        android:layout_marginTop="41dp"
        android:background="#30816c61"
        android:layout_below="@+id/NameID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Pay Now"
        android:id="@+id/buttonPay"
        android:background="@color/red"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/ToBuyList"
        android:layout_alignRight="@+id/ToBuyList"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Remove"
        android:id="@+id/buttonRemove"
        android:background="@color/red"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="123dp"
        />

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Add Item"
        android:id="@+id/buttonAdd"
        android:background="@color/red"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>
