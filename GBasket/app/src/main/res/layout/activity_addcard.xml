<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="codemeharder.gbasket.AddCardActivity"
    android:background="@drawable/aaaa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#30816c61"
        android:layout_above="@+id/btnSubmit">
        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Name"
            android:id="@+id/name"
            android:background="#b4ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:hint="Credit Card Number"
            android:id="@+id/ccNum"
            android:background="#b4ffffff"

            android:layout_below="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp" />

        <EditText
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:hint="CV"
            android:id="@+id/CVC"
            android:background="#b4ffffff"
            android:layout_above="@+id/expYear"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="131dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:hint="Month"
            android:id="@+id/expMonth"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/ccNum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/tan" />

        <EditText
            android:layout_width="131dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:hint="Year"
            android:id="@+id/expYear"
            android:layout_alignTop="@+id/expMonth"
            android:layout_alignEnd="@+id/ccNum"
            android:layout_alignRight="@+id/ccNum"
            android:backgroundTint="@color/tan"
            android:background="@color/tan" />
        </RelativeLayout>

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="#e12f53"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Add Card"
        android:id="@+id/btnSubmit"
        android:background="#e12f53"
        android:textColor="#ffffff"
        android:layout_above="@+id/btnCancel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add New Card"
        android:textSize="40dp"
        android:id="@+id/textView"
        android:textColor="#e12f53"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

</RelativeLayout>
