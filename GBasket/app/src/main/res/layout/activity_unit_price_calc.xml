<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="codemeharder.gbasket.UnitPriceCalc"
    android:background="@drawable/aaaa">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="325dp"
        android:background="#30816c61"
        android:id="@+id/relativeLayout2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Option 1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/QuantityItems"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Item Purchased"
        android:id="@+id/PriceLabel"
        android:layout_alignBottom="@+id/item1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/item1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/PriceLabel"
        android:layout_toEndOf="@+id/PriceLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Units Per Item"
        android:id="@+id/ItemName"
        android:layout_alignBottom="@+id/unit1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/unit1"
        android:layout_below="@+id/PriceLabel"
        android:layout_toRightOf="@+id/PriceLabel"
        android:layout_toEndOf="@+id/PriceLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total Cost"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/cost1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/cost1"
        android:layout_below="@+id/unit1"
        android:layout_alignLeft="@+id/unit1"
        android:layout_alignStart="@+id/unit1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/results1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/cost1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Option 2"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/results1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/item2"
            android:layout_alignTop="@+id/textView6"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Item Purchased"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/item2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/unit2"
        android:layout_below="@+id/item2"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/cost2"
        android:layout_below="@+id/unit2"
        android:layout_alignLeft="@+id/unit2"
        android:layout_alignStart="@+id/unit2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Units Per Item"
        android:id="@+id/textView8"
        android:layout_above="@+id/cost2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total Cost"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/cost2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/results2"
        android:layout_below="@+id/cost2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="33dp" />

    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        android:id="@+id/button"
        android:background="@color/red"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:backgroundTint="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Unit Price Calcuator"
        android:textSize="32dp"
        android:textStyle="bold"
        android:id="@+id/Quantity"
        android:textColor="@color/red"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />


</RelativeLayout>
