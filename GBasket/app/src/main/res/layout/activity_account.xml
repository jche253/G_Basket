<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="codemeharder.gbasket.ForgotActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Settings"
        android:textSize="32dp"
        android:id="@+id/accSetting"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accFname"
        android:text="First Name: "
        android:textSize="22dp"
        android:layout_below="@+id/accSetting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accLname"
        android:text="Last Name: "
        android:textSize="22dp"
        android:layout_below="@+id/accFname"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accEmail"
        android:textSize="22dp"
        android:text="Email: "
        android:layout_below="@+id/accLname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/changepass"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/FnameInput"
        android:textSize="22dp"
        android:layout_alignBottom="@+id/accFname"
        android:layout_toRightOf="@+id/accLname"
        android:layout_toEndOf="@+id/accLname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/LnameInput"
        android:textSize="22dp"
        android:layout_above="@+id/accEmail"
        android:layout_toRightOf="@+id/accFname"
        android:layout_toEndOf="@+id/accFname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/EmailInput"
        android:textSize="22dp"
        android:layout_alignBottom="@+id/accEmail"
        android:layout_toRightOf="@+id/accEmail"
        android:layout_toEndOf="@+id/accEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Old Password:"
        android:textSize="22dp"
        android:id="@+id/oldpassTV"
        android:layout_below="@+id/accEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/oldPassEntry"
        android:layout_alignBottom="@+id/oldpassTV"
        android:layout_toRightOf="@+id/oldpassTV"
        android:layout_toEndOf="@+id/oldpassTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter New Password: "
        android:id="@+id/newPassTV"
        android:textSize="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newPassEntry"
        android:layout_alignBottom="@+id/newPassTV"
        android:layout_toRightOf="@+id/newPassTV"
        android:layout_toEndOf="@+id/newPassTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password: "
        android:id="@+id/confirmPass"
        android:textSize="22sp"
        android:layout_below="@+id/newPassTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmEntry"
        android:layout_alignBottom="@+id/confirmPass"
        android:layout_toRightOf="@+id/confirmPass"
        android:layout_toEndOf="@+id/confirmPass" />

</RelativeLayout>
